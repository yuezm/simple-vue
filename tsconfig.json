{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "alwaysStrict": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@Lib": [
        "./lib/*"
      ],
      "@Types/*": [
        "./typings/*"
      ]
    }
  },
  "include": [
    "./src",
    "./typings"
  ]
}
